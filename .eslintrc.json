{
  "parser": "babel-eslint",
  "globals": {
    "Promise": true,
    "chrome": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "rules": {
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "keyword-spacing": 2,
    "no-console": 2,
    "no-extra-semi": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "semi": [
      2,
      "always"
    ],
    "prettier/prettier": [
      2,
      {
        "trailingComma": "none",
        "printWidth": 100,
        "singleQuote": true
      }
    ]
  }
}
